package com.mlockyt.tictactoejava;

import java.util.Scanner;

public class Main {

  public static void main(String[] args) {

    int[][] board = new int[3][3];

    for (int i = 0; i < 3; i++) {
      for (int c = 0; c < 3; c++) {
        board[i][c] = 0;
      }
    }
    System.out.println("Das Spiel ist vorbereitet!");
    System.out.println("");

    System.out.println(board[0][0] + " | " + board[0][1] + " | " + board[0][2]);
    System.out.println("---------");
    System.out.println(board[1][0] + " | " + board[1][1] + " | " + board[1][2]);
    System.out.println("---------");
    System.out.println(board[2][0] + " | " + board[2][1] + " | " + board[2][2]);

    while (true) {
      System.out.println("");
      System.out.println(
          "Player 1 may now begin! Please enter a value from 1 to 9 or enter a 0 to restart the game:");

      Scanner s = new Scanner(System.in);
      int n = s.nextInt();

      if (n == 1 && board[0][0] == 0) {
        board[0][0] = 1;
      } else if (n == 2 && board[0][1] == 0) {
        board[0][1] = 1;
      } else if (n == 3 && board[0][2] == 0) {
        board[0][2] = 1;
      } else if (n == 4 && board[1][0] == 0) {
        board[1][0] = 1;
      } else if (n == 5 && board[1][1] == 0) {
        board[1][1] = 1;
      } else if (n == 6 && board[1][2] == 0) {
        board[1][2] = 1;
      } else if (n == 7 && board[2][0] == 0) {
        board[2][0] = 1;
      } else if (n == 8 && board[2][1] == 0) {
        board[2][1] = 1;
      } else if (n == 9 && board[2][2] == 0) {
        board[2][2] = 1;
      }
      System.out.println("");

      System.out.println(board[0][0] + " | " + board[0][1] + " | " + board[0][2]);
      System.out.println("---------");
      System.out.println(board[1][0] + " | " + board[1][1] + " | " + board[1][2]);
      System.out.println("---------");
      System.out.println(board[2][0] + " | " + board[2][1] + " | " + board[2][2]);

      System.out.println("");
      System.out.println("Player 2 may now begin! Please enter a value from 1 to 9:");
      int x = s.nextInt();
      if (x == 1 && board[0][0] == 0) {
        board[0][0] = 2;
      } else if (x == 2 && board[0][1] == 0) {
        board[0][1] = 2;
      } else if (x == 3 && board[0][2] == 0) {
        board[0][2] = 2;
      } else if (x == 4 && board[1][0] == 0) {
        board[1][0] = 2;
      } else if (x == 5 && board[1][1] == 0) {
        board[1][1] = 2;
      } else if (x == 6 && board[1][2] == 0) {
        board[1][2] = 2;
      } else if (x == 7 && board[2][0] == 0) {
        board[2][0] = 2;
      } else if (x == 8 && board[2][1] == 0) {
        board[2][1] = 2;
      } else if (x == 9 && board[2][2] == 0) {
        board[2][2] = 2;
      }
      System.out.println("");

      System.out.println(board[0][0] + " | " + board[0][1] + " | " + board[0][2]);
      System.out.println("---------");
      System.out.println(board[1][0] + " | " + board[1][1] + " | " + board[1][2]);
      System.out.println("---------");
      System.out.println(board[2][0] + " | " + board[2][1] + " | " + board[2][2]);
    }
  }
}
